<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="40dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Name"
        android:layout_marginBottom="15dp"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/editnewname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:background="@drawable/create_post_bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Email"
        android:layout_marginBottom="15dp"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/editnewemail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:background="@drawable/create_post_bg"/>
    <ImageView
        android:id="@+id/profileimagepv"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/upload_img_logo_addfragment"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/addprofileimagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#98D8EF"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:text="Add Profile Photo"/>




</LinearLayout>